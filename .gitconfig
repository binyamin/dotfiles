[init]
	; git<=2.25 doesn't support this option
	defaultBranch = main
[user]
	name = Binyamin Aron Green
	email = binyamingreen@protonmail.com
[pull]
	ff = only
[merge]
	tool = "vsc"
[mergetool "vsc"]
	cmd = code-insiders --wait --new-window $MERGED
[diff]
	tool = "vsc"
[difftool "vsc"]
	cmd = code-insiders --wait --diff --new-window $LOCAL $REMOTE
